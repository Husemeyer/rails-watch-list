<div class="container">
  <div class="row text-left">
    <div class="col-md-12">
      <h1>Movies to watch under genre: <%= @list.name %></h1>

      <%= link_to 'Add a Movie', new_list_bookmark_path(@list), class: 'btn btn-primary btn-lg' %>
        <br>
        <% @list.bookmarks.each do |bookmark| %>
          <p><strong><%= bookmark.movie.title %></strong><p>
          <%= bookmark.comment %>
          <%= link_to bookmark_path(bookmark),  data: { turbo_method: :delete, turbo_confirm: "Delete bookmark?"}, class: 'card-delete' do  %>
          <i class="fas fa-trash"></i>
          <% end %>
        <% end %>
    </div>
  </div>
</div>
